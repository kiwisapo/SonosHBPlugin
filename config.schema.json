{
    "pluginAlias": "SonosHBPlugin",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "Sonos"
            },
            "deviceNames": {
                "title": "Device Names",
                "type": "array",
                "description": "List of Sonos room names to expose to HomeKit (e.g. 'Living Room'). Devices not listed here will be ignored.",
                "items": {
                    "type": "string",
                    "title": "Room Name"
                }
            },
            "devices": {
                "title": "Devices (Strict Filter)",
                "type": "array",
                "description": "List of Sonos devices to expose using Name AND (IP Address OR MAC Address). If this list is populated, it takes precedence over 'Device Names'.",
                "items": {
                    "type": "object",
                    "properties": {
                        "deviceName": {
                            "type": "string",
                            "title": "Device Name (Required)"
                        },
                        "ipAddress": {
                            "type": "string",
                            "title": "IP Address (Optional)"
                        },
                        "macAddress": {
                            "type": "string",
                            "title": "MAC Address (Optional)"
                        }
                    },
                    "required": [
                        "deviceName"
                    ]
                }
            }
        }
    },
    "layout": [
        "name",
        {
            "key": "deviceNames",
            "type": "array",
            "orderable": false,
            "buttonText": "Add Room Name"
        }
    ]
}